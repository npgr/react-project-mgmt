{
    "$schema": "http://json-schema.org/schema",
    "description": "User Credentials",
    "type": "object",
    "properties": {
        "userName": {
            "type": "string",
            "format": "user"    
        },
        "name": {
            "type": "string",
            "format": "personName"    
        },
        "email": {
          "type": "string",
          "format": "email"    
        },
        "roles": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "userRol"
          }
        }
    },
    "required": [
        "user",
        "name",
        "email",
        "roles"
    ]
}
